<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:id="@+id/imgView"
        android:src="@drawable/instagram_viewer"
        android:layout_below="@+id/imgProfile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:text="@string/caption_default_text"
        android:id="@+id/tvCaption"
        android:layout_below="@+id/tvUserName"
        android:layout_toRightOf="@+id/imgProfile" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgProfile"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_user_name"
        android:id="@+id/tvUserName"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_toRightOf="@+id/imgProfile"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_comment_string"
        android:id="@+id/tvComment1"
        android:maxLines="3"
        android:ellipsize="end"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/imgLike"
        android:layout_toRightOf="@+id/tvFromUser1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_comment_string"
        android:id="@+id/tvComment2"
        android:maxLines="3"
        android:ellipsize="end"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/tvComment1"
        android:layout_toRightOf="@+id/tvFromUser2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgLike"
        android:layout_below="@+id/imgView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_like" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_like_string"
        android:paddingTop="5dp"
        android:id="@+id/tvLikes"
        android:layout_below="@+id/imgView"
        android:layout_toRightOf="@+id/imgLike" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user1:"
        android:textStyle="bold"
        android:id="@+id/tvFromUser1"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/imgLike"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user2:"
        android:textStyle="bold"
        android:id="@+id/tvFromUser2"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/tvComment1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
